{
    "version": 2,
    "name": "project_deployment",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "18.x"
            }
        }
    ],
    "env": {
        "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
        "AWS_LAMBDA_JS_RUNTIME": "nodejs18.x" 
    },
    "routes": [
        {
            "src": "/fetch-html",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}

{
    "version": 2,
    "name": "project_deployment",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "20.x"
            }
        }
    ],
    "env": {
        "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
        "PLAYWRIGHT_BROWSERS_PATH": "0"
    },
    "routes": [
        {
            "src": "/fetch-html",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}
